<!DOCTYPE html>
<html lang="en">
<% include partials/index_Header.ejs %>
<body>
<div class="container">
    <div class="container solid-content">
        <h3>Thông tin sản phẩm</h3>

        <div id="cartdetail" class="row">
            <table class="table table-bordered">
                <thead>
                <th class="text-right" style="text-align: center;"><h3>Tên sản phẩm</h3></th>
                <th class="text-right" style="text-align: center;"><h3>Size</h3></th>
                <th class="text-right" style="text-align: center;"><h3>Giá sản phẩm</h3></th>
                <th class="text-right" style="text-align: center;"><h3>Số Lượng</h3></th>
                <th class="text-right" style="text-align: center;"><h3>Thành Tiền</h3></th>
                <!-- <td ><h4 style="text-align: center;">Size</h4></td>
                <td class="text-right"><h4 style="text-align: center;"></h4></td>
                <td class="text-right"><h4 style="text-align: center;"></h4></td>
                <td class="text-right"><h4 style="text-align: center;"></h4></td> -->
                </thead>
                <% for (var i = 0; i < result.length; i++) { %>
                <tbody>
                <% for (var j = 0; j < result[i].sizes.split(';').length; j++) { %>
                <tr>
                    <td class="text-center" style="display: none">
                        <input id="id-input" name = "id-input" value = "<%=result[i].product_id.split(';')[j]%>">
                        <!-- <input id='size_id' class="booking-item-title size_id_header"
                                   style="text-align: center; background-color: transparent" disabled
                                   value="<%= result[i].name %>"></input> -->
                    </td>
                    <td class="text-center">
                        <%= result[i].name %>
                        <!-- <input id='size_id' class="booking-item-title size_id_header"
                                   style="text-align: center; background-color: transparent" disabled
                                   value="<%= result[i].name %>"></input> -->
                    </td>
                    <td class="text-center">
                        <%= result[i].sizes.split(';')[j] %>
                        <!-- <input id='size_id' class="booking-item-title size_id_header"
                                   style="text-align: center; background-color: transparent" disabled
                                   value="<%= result[i].sizes.split(';')[j] %>"></input> -->
                    </td>

                    <td class="text-center">
                        <% if(result[i].discount_prices == null || result[i].discount_prices.split(';')[j] == null || result[i].discount_prices.split(';')[j] == '0') { %>

                        <label style=" text-align: center"><font
                                    color="black"><%= result[i].prices.split(';')[j] %> </font></label>
                        <% }else { %>

                        <label style="text-decoration:line-through ; text-align: center"><font
                                    color="black"><%= result[i].prices.split(';')[j] %></font></label>-><label
                                style=" text-align: center"><font
                                    color="red"><%= result[i].discount_prices.split(';')[j] %></font></label>
                        <% } %>
                    </td>
                    <td>
                        <input id="quantity" class="center-block form-control booking-item-title quantity_header"
                               value="<%= result[i].quantities.split(';')[j].trim() %>" type="number" min="1" max=""
                               name = "amount-input"
                               step="1" autocomplete="off" style="width: 50%;">

                    </td>
                    <td class="text-center">
                        <%= result[i].sums.split(';')[j] %>
                        <!-- <input class="booking-item-title"
                               style="text-align: center; background-color: transparent" disabled
                               value=""> -->

                    </td>
                </tr>
                <% } %>
                <!--                     <tr>
                        <td class="text-center"><h4 style="text-align: center;"></h4></td>
                        <td class="text-center"><h4 style="text-align: center;"></h4></td>
                        <td class="text-center"><h4 style="text-align: center;"></h4></td>
                        <td class="text-center"><h4 style="text-align: center;">Tổng Tiền</h4></td>
                        <td class="text-center"><h4 style="text-align: center;"><%= result[i].total %></h4></td>
                    </tr> -->
                </tbody>
                <% } %>
            </table>
        </div>

        <div class="row">
            <div id="signup" class="modal">
                <div class="container popup animate">
                    <div style="padding-top: 75px;">
                    <span onclick="document.getElementById('id01').style.display='none'" class="close"
                          title="Close Modal">&times;</span>
                        <img src="/img/LOGO.svg" alt="Avatar" class="avatar center-block" style="max-width: 75px">
                        <div class="row" style="text-align: center">
                            <label>
                                Bạn có muốn đăng kí tài khoàn không?
                                Nếu có vui lòng nhập Mật Khẩu.
                            </label>
                        </div>

                    </div>
                    <form class="form-horizontal" role="form" action="/login" method="POST">
                        <div class="row">
                            <label for="inputEmail3" class="col-sm-2 control-label">Tài khoản:</label>
                            <div class="col-sm-10">
                                <input type="text" placeholder="Enter Username" required  class="form-control" id ="username" value = "" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <label for="inputPassword3" class="col-sm-2 control-label">Mật khẩu:</label>
                            <div class="col-sm-10">
                                <input type="password" placeholder="Enter Password" class="form-control" name="passwordpayment" id ="passwordpayment">
                            </div>
                        </div>

                    </form>
                    <div class="col-md-5">


                    </div>
                    <div class="col-md-2">
                        <br>
                        <button class="form-control btn-success" onclick="SignUp()"> Đăng kí</button>
                        <br>
                        <button class="form-control btn-danger" onclick="Cancel()"> Không</button>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <input id="ship" style="display: none" value='0'>
    <input id="type" style="display: none" value='0'>
    <div class="col-sm-7">

        <div class="row solid-content">
            <h3>Hình thức giao hàng</h3>
            <div class="col-xs-3 col-md-3" id='ghtk' style="display: none;">
                <a class="thumbnail" >
                    <img onclick="Ship(1)" class="dilivery" src="img/delivery_form/giaohangtietkiem.png" alt="...">
                </a>
            </div>
            <div class="col-xs-3 col-md-3" id='ghn' style="display: none;">
                <a class="thumbnail">
                    <img onclick="Ship(2)" class="dilivery" src="img/delivery_form/giaohangnhanh.png" alt="...">
                </a>
            </div>
            <div class="col-xs-3 col-md-3" id='vtp' style="display: none;">
                <a class="thumbnail">
                    <img onclick="Ship(3)" class="dilivery" src="img/delivery_form/viettel_post.jpg" alt="...">
                </a>
            </div>
            <div class="col-xs-3 col-md-3" id='bd' style="display: none;">
                <a class="thumbnail">
                    <img onclick="Ship(4)" class="dilivery" src="img/delivery_form/vnpost.png" alt="...">
                </a>
            </div>
        </div>
        <div class="row solid-content">

            <h3>Hình thức thanh toán</h3>
            <div class="col-xs-3 col-md-3" id="tm" style="display: none;">
                <a class="thumbnail" onclick="Type(1)">
                    <img class="type-payment" src="img/payment_method/cash.jpg" alt="...">
                </a>
            </div>
            <div class="col-xs-3 col-md-3" id="COD" style="display: none;">
                <a class="thumbnail" onclick="Type(2)">
                    <img class="type-payment" src="img/payment_method/transfer.jpg" alt="...">
                </a>
            </div>
            <div class="col-xs-3 col-md-3" id="ck" style="display: none;">
                <a class="thumbnail" onclick="Type(3)">
                    <img class="type-payment" src="img/payment_method/COD.jpg" alt="...">
                </a>
            </div>
            <div class="col-xs-3 col-md-3" id="ttd" style="display: none;">
                <a class="thumbnail" onclick="Type(4)">
                    <img class="type-payment" src="img/payment_method/credit.png" alt="...">
                </a>
            </div>
        </div>

    </div>
    <div class="col-sm-4 solid-content">
        <h2>Thông tin đơn hàng</h2>
        <% if(userdetail != undefined){ %>
        <h4>Tên: <%= userdetail[0].firstname %> <%= userdetail[0].lastname %></h4>
        <h4>Số điện thoại: <%= userdetail[0].phone %></h4>
        <h4>Địa Chỉ: <%= userdetail[0].address %></h4>
        <h4>Email: <%= userdetail[0].email %></h4>
        <% } else { %>
        <h4>Tên: </h4><input id="name">
        <h4>Số điện thoại: </h4><input id="phone" onkeyup="CheckPhone()"> <label id = 'fs'></label>
        <h4>Địa Chỉ: </h4><input id="address">
        <h4>Email: </h4><input id="email">
        <%}%>

        <h4>Phí vận chuyển</h4>
        <div class="row">
            <div class="col-sm-8 form-group has-success has-feedback">
                <input type="text" class="form-control"  id="voucher" placeholder="Mã giảm giá">
            </div>
            <button class="col-sm-4 btn btn-success" onclick="CheckVoucher()">Áp dụng</button>
        </div>
        <h3>Tổng cộng: </h3>
        <h2 id="totalLabel" class="fa-money"><%= totalAll %></h2>
    </div>
    <button class="btn btn-danger col-sm-2 col-md-offset-3" type="button"
            onclick="document.getElementById('id03').style.display='none'">
        Hủy
    </button>
    <button class="btn btn-info col-sm-2" type="button" onclick="UpdateCart()">
        Cập Nhật Giỏ
    </button>
    <button onclick="CheckOut()" class="btn btn-success col-sm-2">
        Thanh Toán
    </button>
</div>
<div class="row">
    <div id="idSuccess" class="modal">
        <div class="container popup animate">
            <div style="padding-top: 75px;">
                <span onclick="document.getElementById('id03').style.display='none'" class="close"
                      title="Close Modal">&times;</span>
                <img src="img/LOGO.svg" alt="Avatar" class="avatar center-block" style="max-width: 75px">
            </div>
            <div style="padding-top: 75px;">
                <span onclick="document.getElementById('id03').style.display='none'" class="close"
                      title="Close Modal">&times;</span>
                <h4>
                    Liên Hoa Các đã tiếp nhận đơn hàng của bạn. Chúng tôi sẽ xử lý và giao hàng nhanh nhất có thể.
                    Xin trân trọng cảm ơn.
                </h4>
            </div>
            <a href="/" class="btn btn-success col-sm-2">
                <img src="assets/img/success.jpg" alt="Avatar" class="avatar center-block" style="max-width: 75px">
            </a>
        </div>
    </div>
</div>
</body>
<% include partials/index_Footer.ejs %>
<script>
    var transportMethod = "<%=setting[0].transportMethod%>".split(";");
    var paymentMethod = "<%=setting[0].paymentMethod%>".split(";");
    var freeShip = <%=setting[0].freeShip%>;
    var defaultShip = <%=setting[0].defaultShip%>;
    for (i=0; i<transportMethod.length; i++){
        if (transportMethod[i] == "ghtk"){
            document.getElementById("ghtk").style.display = "block";
        }
        if (transportMethod[i] == "bd"){
            document.getElementById("bd").style.display = "block";
        }
        if (transportMethod[i] == "vtp"){
            document.getElementById("vtp").style.display = "block";
        }
        if (transportMethod[i] == "ghn"){
            document.getElementById("ghn").style.display = "block";
        }
    }
    for (i=0; i<paymentMethod.length; i++){
        if (paymentMethod[i] == "tm"){
            document.getElementById("tm").style.display = "block";
        }
        if (paymentMethod[i] == "COD"){
            document.getElementById("COD").style.display = "block";
        }
        if (paymentMethod[i] == "ck"){
            document.getElementById("ck").style.display = "block";
        }
        if (paymentMethod[i] == "ttd"){
            document.getElementById("ttd").style.display = "block";
        }
    }

    var type = '';
    var ship = '';

    function Ship(idx) {
        ship = idx;
        document.getElementById("ship").value = idx;
        var dilivery = document.getElementsByClassName("dilivery");
        for (i=0; i<dilivery.length; i++){
            var ind = i+1;
            if (ind==ship){
                dilivery[i].className += " selected";
            } else{
                dilivery[i].className = "dilivery";
            }
        }
    }

    function Type(idx) {
        type = idx;
        document.getElementById("type").value = idx;
        var dilivery = document.getElementsByClassName("type-payment");
        for (i=0; i<dilivery.length; i++){
            var ind = i+1;
            if (ind==type){
                dilivery[i].className += " selected";
            } else{
                dilivery[i].className = "type-payment";
            }
        }
    }
    function CheckPhone() {
        var obj = $("#phone");
        $(".error").remove();
        $.ajax({
            type: "POST",
            url: "./ajax/checkPhone",
            data: "phone=" + obj.val(),
            success: function (msg) {
                //alert(msg);
                data = msg;
                if (data.status == 'success') {
                    document.getElementById('name').value = data.detail[0].firstname ;
                    document.getElementById('email').value = data.detail[0].email;
                    document.getElementById('address').value = data.detail[0].address;

                }
            }
        });
    }

    function Cancel(){
        document.getElementById('signup').style.display = 'none';
        SignUp();
    }
    function SignUp(){
        document.getElementById('signup').style.display = 'none';
        var formdata1 = new FormData();
        var sizes = new Array();
        var quantities = new Array();
        /* sizes.push(document.getElementById('prd-id').value);
         quantities.push(parseInt($("#amount").val()));*/

        for(var i = 0 ; i < document.getElementsByName('id-input').length;i++){
            sizes.push(document.getElementsByName('id-input')[i].value);
        }
        for(var i = 0 ; i < document.getElementsByName('amount-input').length;i++){
            quantities.push(document.getElementsByName('amount-input')[i].value);
        }
        formdata1.append('size_id',sizes);
        formdata1.append('quantity',quantities);
        formdata1.append('firstname',$("#name").val());
        formdata1.append('email',$("#email").val());
        formdata1.append('phone',$("#phone").val());
        formdata1.append('address',$("#address").val());
        formdata1.append('voucher',$("#voucher").val());
        formdata1.append('password',$("#passwordpayment").val());

        formdata1.append('mode','pay');
        formdata1.append('title',$("#title").val());

        $.ajax({
            url: "/PetMart/signup",
            type: 'POST',
            data: formdata1,
            async: false,
            cache: false,
            contentType: false,
            enctype: 'multipart/form-data',
            processData: false,
            success: function (response) {
                if(response.code == '200'){
                    $.ajax({
                        url: "/PetMart/add-to-cart",
                        type: 'POST',
                        dataType : 'JSON',
                        data: JSON.stringify({size_id:sizes,quantity:quantities,userId:response.user_id}),
                        async: false,
                        cache: false,
                        contentType: 'application/json; charset=UTF-8',
                        enctype: 'multipart/form-data',
                        processData: false,
                        success: function (response1) {
                            var formdata = new FormData();
                            formdata.append('ship', ship);
                            formdata.append('type', type);
                            formdata.append('user', response.user_id);
                            if (document.getElementsByClassName('error').length == 0) {
                                formdata.append('voucher', $("#voucher").val());
                            }

                            $.ajax({
                                url: '/PetMart/add-to-payment',
                                type: 'POST',
                                data: formdata,
                                async: false,
                                cache: false,
                                contentType: false,
                                enctype: 'multipart/form-data',
                                processData: false,
                                success: function (response2) {
                                    if (response2.code == '200') {
                                        window.location = "/payment-detail?id="+response2.payment_id+"&user="+response.user_id;
                                    }
                                }
                            });
                        }
                    });
                }
            }
        });
    }
    function CheckVoucher() {
        var obj = $("#voucher");
        $(".error").remove();
        $.ajax({
            type: "POST",
            url: "./PetMart/get-voucher",
            data: "mode=check_email&voucher=" + obj.val() + "&total=<%= totalAll %>",
            success: function (msg) {
                //alert(msg);
                data = msg;
                if (data.code == '404') {
                    obj.after("<label class='error'>Voucher Hết Hạn Hoặc Không Tồn Tại</label>");
                    document.getElementById("totalLabel").innerHTML = "<%= totalAll %>";

                }
                else {
                    var result = parseFloat('<%=totalAll%>') - parseFloat(data.totalAfter);

                    document.getElementById("totalLabel").innerHTML = "<label style='text-decoration: line-through'><font color='black'> <%= totalAll %></font></lable><label><font color='red'> -> " + result + "</lable>";
                }
            }
        });
    }

    function CheckOut() {

        <%if (userdetail == undefined){%>
            document.getElementById('signup').style.display = 'block';
        document.getElementById('username').value = document.getElementById('phone').value;
        <%} else {%>
        var formdata = new FormData();
        formdata.append('ship', ship);
        formdata.append('type', type);
        if (document.getElementsByClassName('error').length == 0) {
            formdata.append('voucher', $("#voucher").val());
        }

        $.ajax({
            url: '/PetMart/add-to-payment',
            type: 'POST',
            data: formdata,
            async: false,
            cache: false,
            contentType: false,
            enctype: 'multipart/form-data',
            processData: false,
            success: function (response) {
                if (response.code == '200') {
                    document.getElementById('idSuccess').style.display = 'block';
                }
            }
        });
        <%}%>


    }

    function UpdateCart() {
        var formdata1 = new FormData();
        var sizes = new Array();
        var quantities = new Array();
        var input = document.getElementsByClassName('booking-item-title size_id_header');
        <% for (var i = 0; i < result.length; i++) { %>
            <% for (var j = 0; j < result[i].size_ids.split(";").length; j++) { %>
            sizes.push(<%= result[i].size_ids.split(";")[j] %>);
            <% } %>
        <% } %>
        input = document.getElementsByClassName('form-control booking-item-title quantity_header');
        for (var i = 0; i < input.length; i++) {
            quantities.push(input[i].value);
        }
        formdata1.append('size_id', sizes);
        formdata1.append('quantity', quantities);
        $.ajax({
            url: "./PetMart/update-cart",
            type: 'POST',
            dataType: 'JSON',
            data: JSON.stringify({size_id: sizes, quantity: quantities}),
            async: false,
            cache: false,
            contentType: 'application/json; charset=UTF-8',
            enctype: 'multipart/form-data',
            processData: false,
            success: function (response) {
                alert(response.status);
                document.getElementById('id03').style.display = 'none';
                window.location.reload();
            }
        });

    }
</script>
</html>