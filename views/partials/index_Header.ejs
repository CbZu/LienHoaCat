    <script>
        // Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

    <script>
        var sizesArray = new Array();
        function GetCart(idx){
            var url ='';
            if(idx == 0){
                url = './PetMart/get-cart';
            }else{
                url = './PetMart/get-cart?user='+idx;
            }
            $.ajax({
                url: url,
                type: 'POST',
                dataType: 'JSON',
                data: JSON.stringify({mode: 'online'}),
                async: false,
                cache: false,
                contentType: 'application/json; charset=UTF-8',
                enctype: 'multipart/form-data',
                processData: false,
                success: function (response) {
                    document.getElementById('cartdetail').innerHTML = '';
                    var inner = ''
                    for (var i = 0; i < response.result.length; i++) {
                        inner += '<div class="row">\n' +
                            '                    <h2>' + response.result[i].name + ' </h2>\n' +
                            '                </div>'
                        inner += '<table class="row table table-condensed form-group">\n' +
                            '                    <tbody>\n' +
                            '                <tr>\n' +
                            '                    <td class="text-right"><h4 style="text-align: center;">Size</h4></td>\n' +
                            '                    <td class="text-right"><h4 style="text-align: center;">Giá sản phẩm</h4></td>\n' +
                            '                    <td class="text-right"><h4 style="text-align: center;">Số Lượng</h4></td>\n' +
                            '                    <td class="text-right"><h4 style="text-align: center;">Thành Tiền</h4></td>\n'
                        '                </tr>';
                        for (var j = 0; j < response.result[i].sizes.split(';').length; j++) {
                            sizesArray.push(response.result[i].size_ids.split(';')[j]);
                            inner += '<tr>\n' +
                                '                            <td class="text-center">\n' +
                                '                                <input id = \'size_id\'class="booking-item-title size_id_header" style="text-align: center;border: none; background-color: transparent" disabled value="' + response.result[i].sizes.split(';')[j] + '"></input>\n' +
                                '                            </td>\n' +
                                '\n' +
                                '                            <td class="text-center">\n';
                                if(response.result[i].discount_prices == null) {
                                    inner +=  '                            <label style=" text-align: center"><font\n';
                                    inner +=  '                                        color="black">'+response.result[i].prices.split(';')[j]+' </font></label>\n';
                                }else {
                                    inner +=  '                            <label style="text-decoration:line-through ; text-align: center"><font\n';
                                    inner +=  '                                        color="black">'+ response.result[i].prices.split(';')[j] +'</font></label>\n' ;
                                    inner +=  '                            ->\n';
                                    inner +=  '                            <label style=" text-align: center"><font\n' ;
                                    inner +=  '                                        color="red">'+response.result[i].discount_prices.split(';')[j] +'</font></label>\n';
                                }
                            inner +=  '                            </td>'
                            inner +=  '                            <td class="text-center">\n' +
                                '                                <input  id = \'quantity\'class="form-control booking-item-title quantity_header" value=' + response.result[i].quantities.split(';')[j] + ' type="number" min="1" max=""  step="1" autocomplete="off" height="100%" width="50%">\n' +
                                '\n' +
                                '                            </td>\n' +
                                '                            <td class="text-center">\n' +
                                '                                <input class="booking-item-title" style="text-align: center;border: none; background-color: transparent" disabled value="' + response.result[i].sums.split(';')[j] + '">\n' +
                                '\n' +
                                '                            </td>\n' +
                                '                        </tr>'
                        }
                        inner += '                <tr>\n' +
                            '                    <td class="text-center"><h4 style="text-align: center;"></h4></td>\n' +
                            '                    <td class="text-center"><h4 style="text-align: center;"></h4></td>\n' +
                            '                    <td class="text-center"><h4 style="text-align: center;"></h4></td>\n' +
                            '                    <td class="text-center"><h4 style="text-align: center;">Tổng Tièn</h4></td>\n' +
                            '                    <td class="text-center"><h4 style="text-align: center;">'+response.result[i].total+'</h4></td>\n'
                        '                </tr>';
                        inner += '</tbody>\n' +
                            '                </table>';
                    }
                    document.getElementById('cartdetail').innerHTML = inner;
                    document.getElementById('id03').style.display='block';
                }
            });
        }


        function UpdateCart(idx){
            var formdata1 = new FormData();
            var sizes = new Array();
            var quantities = new Array();
            var input = document.getElementsByClassName('booking-item-title size_id_header');
            for (var i = 0; i < sizesArray.length; i++) {
                sizes.push(sizesArray[i]);
            }
            input = document.getElementsByClassName('form-control booking-item-title quantity_header');
            for (var i = 0; i < input.length; i++) {
                quantities.push(input[i].value);
            }
            formdata1.append('size_id',sizes);
            formdata1.append('quantity',quantities);
            $.ajax({
                url: "./PetMart/update-cart",
                type: 'POST',
                dataType : 'JSON',
                data: JSON.stringify({size_id:sizes,quantity:quantities}),
                async: false,
                cache: false,
                contentType: 'application/json; charset=UTF-8',
                enctype: 'multipart/form-data',
                processData: false,
                success: function (response) {
                    alert(response.status);
                    document.getElementById('id03').style.display='none';
                }
            });

        }
    </script>
</div>
