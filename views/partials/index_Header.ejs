<div class="top-header">
    <div class="container hidden-sm hidden-xs">
        <div class="row" style="position: relative;">
            <div class="col-sm-12 col-md-1">
                <a href="/"><img src="img/LOGO.svg" alt="LienHoaCac"
                                 style="width: 80px; margin: auto; padding-top: 10px;"></a>
            </div>
            <form class="form-inline col-sm-12 col-md-5 center-height" method="GET" action="/search"
                  style="position: absolute; left: 100px;">
                <div class="form-group">
                    <input class="typeahead-prd form-control" type="text" name="topSearchKeyword" id="topSearchKeyword"
                           value="">
                    </input>
                </div>
                <button type="submit" class="btn btn-default">Tìm</button>
            </form>
            <div class="col-md-4 col-md-offset-7 center-height" style="position: absolute;">
                <div class="col-md-4 col-md-offset-2" style="padding: 0px;">
                    <!-- <div class="row"> -->

                    <% if(fname != undefined){ %>
                    <div class="col-md-4" style="padding: 0px;">
                        <a href="/edit-account">
                            <img class="img-circle origin" src="img/40x40.png" alt="Image Alternative text"
                                 title="AMaze"/>
                        </a>
                    </div>
                    <div class="col-md-8" style="padding: 0px;">
                        <h5 style="text-align: center;">Hi, <%=fname%></h5>
                    </div>
                    <% } %>

                    <!--  </div>  -->
                </div>
                <% if(type != undefined){%>
                <div class="col-md-3" style="padding: 0px;">
                    <a href="/logout">
                        <h5>Đăng xuất</h5>
                    </a>
                </div>
                <%}%>

                <% if(type == undefined){%>
                <div class="col-md-3" style="padding: 0px;">
                    <a onclick="document.getElementById('id01').style.display='block'" style="width:auto;">
                        <h5>Đăng nhập</h5>
                    </a>
                </div>
                <%}%>               
            </div>
            <div class="col-md-1 col-md-offset-10 center-height" style="position: absolute; max-height: 60%;">
                    <a href="#" class="thumbnail">
                        <img src="img/cart.jpg" da alt="Go to Cart">
                    </a>
            </div> 
        </div>
    </div>


    <div id="id01" class="modal">

        <form class="modal-content animate" action="/login" method="POST">
            <div class="imgcontainer">
                <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                <img src="img/LOGO.svg" alt="Avatar" class="avatar" style="max-width: 75px">
            </div>

            <div class="container">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="email" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>

                <button class="center-block" type="submit">Login</button>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>

            <div class="container" style="background-color:#f1f1f1">
                <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">
                    Cancel
                </button>
                <span class="psw">Forgot <a href="#">password?</a></span>
            </div>
        </form>
    </div>

    <script>
        // Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

</div>
