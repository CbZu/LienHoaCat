                    '                            <input class="col-md-3" id = \'newPrice\' value = \'\'>\n' +
                    '\n' +
                    '                            </input>\n' +
                    '                            <input class="col-md-3" id = \'newDisc\' value = \'\'>\n' +
                    '\n' +
                    '                            </input>\n' +
