                    '\n' +
                    '                            </input><div class="col-md-3">\n' +
                    '\n' +
                    '                            <button class="btn btn-success" id = \'okBtn\' onclick="Ok()" value = \'\'>Ok\n' +
                    '\n' +
                    '                            </button></div>\n' +
                    '                        </div><br>';
                $(element).insertBefore($('#rowInsertBtn'));
            }

        }
        function Update(){
            var Id = '';
            var PriceValue = '';
            var DiscountValue = '';
            var description = document.getElementById('description').value;
            <%for(var i = 0; i < result.length;i++){%>
                <%if(i < result.length-1){%>
                    Id += '<%=result[i].product_id%>'+';';
                    PriceValue += document.getElementById('price<%=result[i].product_id%>').value +';';
                    DiscountValue += document.getElementById('discount<%=result[i].product_id%>').value +';';
                <%}else{%>
                    Id += '<%=result[i].product_id%>';
                    PriceValue += document.getElementById('price<%=result[i].product_id%>').value;
                    DiscountValue += document.getElementById('discount<%=result[i].product_id%>').value;
                <%}%>

            <%}%>
            $.ajax({
                type: "POST",
                url: "./ajax/updateProduct",
                data: "mode=update&sizeId=" + Id+"&PriceValue="+PriceValue+"&DiscountValue="+DiscountValue+"&description="+description+"&descriptionId="+"<%=descriptionId%>",
                success: function (msg) {
                    //alert(msg);
                    data = msg;

                        location.reload();

                }
            });
        }
        function Ok(){
            var size = document.getElementById('newSize').value;
            var price = document.getElementById('newPrice').value;
            var disct_price = document.getElementById('newDisc').value;
            var code = document.getElementById('newCode').value;

            $.ajax({
                type: "POST",
                url: "./ajax/updateProductOk",
                data: "mode=update&size=" + size+"&price="+price+"&discount="+disct_price+"&code="+code+"&descriptionId="+"<%=descriptionId%>"+"&category="+"<%=result[0].cat_id%>"+"&name="+"<%=result[0].name%>",
                success: function (msg) {
                    //alert(msg);
                    data = msg;

                    location.reload();

                }
            });
        }
        function okImage(){
            var url = document.getElementById('newURL').value;
            var type = document.getElementById('newImgType').value;
            $.ajax({
                type: "POST",
                url: "./ajax/updateProductImage",
                data: "mode=update&product_id=" + <%=result[0].product_id%>+"&url="+url+"&type="+type,
                success: function (msg) {
                    //alert(msg);
                    data = msg;

                    location.reload();

                }
            });
        }
