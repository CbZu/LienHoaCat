        function insert(){
            var newElement = document.getElementById('newSize');
            if(newElement == undefined){
                var element = '<div class="row">\n' +
                    '                           \n' +
                    '                            <input class="col-md-1" id = \'newSize\' value = \'\'>\n' +
                    '\n' +
                    '                            </input>\n' +
                    '                            \n' +
